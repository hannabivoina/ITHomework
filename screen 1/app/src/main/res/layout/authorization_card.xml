<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/authorizationCardLay"
    android:layout_width="match_parent"
    android:layout_height="418dp"
    android:background="@drawable/layout_with_radius_corners">

    <TextView
        android:id="@+id/cartText"
        android:layout_width="184dp"
        android:layout_height="55dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="321dp"
        android:gravity="center"
        android:text="@string/authorization_text"
        android:textColor="@color/text_color"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardTextEmail"
        android:layout_width="323dp"
        android:layout_height="13dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="133dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="272dp"
        android:text="@string/text_email"
        android:textColor="@color/purple_accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/cardEditTextEmail"
        android:layout_width="323dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="151dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="249dp"
        android:hint="@string/email_example"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lineLayout"
        android:layout_width="323dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="239dp"
        android:background="@color/purple_accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardTextPassword"
        android:layout_width="323dp"
        android:layout_height="13dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="209dp"
        android:text="@string/text_password"
        android:textColor="@color/purple_accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/cardEditTextPassword"
        android:layout_width="323dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="214dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="186dp"
        android:hint="@string/email_example"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lineLayoutSecond"
        android:layout_width="323dp"
        android:layout_height="2dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="240dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="176dp"
        android:background="@color/purple_accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/cardTextForgotPassword"
        android:layout_width="93.57dp"
        android:layout_height="16dp"
        android:text="@string/text_forgot_password"
        android:textSize="12dp"
        android:textColor="@color/text_color"
        android:layout_marginStart="250.43dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="137dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/cardButton"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="339dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_with_radius_corners"
        android:text="@string/text_sign_in"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>